<ul id="<%= comment.id %>">
	<%= link_to gravatar_for(comment.user), comment.user %>
	<span class="user">
		<%= link_to comment.user.name, comment.user %>
	</span>
	<span class="comment"> <%= comment.comment %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(comment.created_at) %> ago.
	</span>
</ul>

	
